{% case media %}
    {% when 'image' %}    
        {{ media  |   img_tag }}  

    {% when 'external_video'%}
        {{ media | external_video_tag }}

    {% when 'video' %}
        {{ media | video_tag : controls: true, class: 'h-full w-full object-cover' }}
    {% else %}
    {{ media  | media_tag  }}  
{% endcase %}
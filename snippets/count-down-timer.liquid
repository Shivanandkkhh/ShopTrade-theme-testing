{% if end_date != blank %}
<div class="timer">
  {% if title != blank %}
    <h4 class="timer__title">{{ title }}</h4>
  {% endif %}
  <div class="timer-display">
    <div class="timer-block">
      <span class="timer-block__num js-timer-days">00</span>
      <span class="timer-block__unit">Days</span>
    </div>
    <!-- code by websensepro.com -->
    <div class="timer-block">
      <span class="timer-block__num js-timer-hours">00</span>
      <span class="timer-block__unit">Hours</span>
    </div>
    <div class="timer-block">
      <span class="timer-block__num js-timer-minutes">00</span>
      <span class="timer-block__unit">Minutes</span>
    </div>
    <div class="timer-block">
      <span class="timer-block__num js-timer-seconds">00</span>
      <span class="timer-block__unit">Seconds</span>
    </div>
  </div>
</div>
<style>
/* styles for timer */
  .timer {
    background: brown ;
    padding: 10px 10px 15px 10px;
    margin: 10px 0;
    color:#fff;
    border-radius: 10px;
  }
  .timer--expired {
    display: none;
  }
  .timer__title {
    @extend .paragraph;
    text-align: center;
    color:white;
    font-weight: 800;
    font-size: 20px;
  }
  .timer-display {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-wrap: wrap;
        flex-wrap: wrap;
    -webkit-box-pack: justify;
        -ms-flex-pack: justify;
            justify-content: space-between;
    margin-top: 5px;
  }
  .timer-block {
    position: relative;
    width: 25%;
    padding: 0 10px;
    &:not(:last-child):after {
      content: ':';
      position: absolute;
      right: 0;
      top: 3px;
    }
  }
  .timer-block{
color : #fff;

}
  .timer-block__num,
  .timer-block__unit {
    display: block;
    text-align: center;
  }
</style>
<script type="text/javascript">
  {% comment %} var second = 1000,
      minute = second * 60,
      hour = minute * 60, 
      day = hour * 24;

  var countDown = new Date('{{- end_date -}}').getTime();

      x = setInterval(function() {
      var now = new Date().getTime(),
          distance = countDown - now;
      document.querySelector('.js-timer-days').innerText = Math.floor(distance / (day)),
        document.querySelector('.js-timer-hours').innerText = Math.floor((distance % (day)) / (hour)),
      document.querySelector('.js-timer-minutes').innerText = Math.floor((distance % (hour)) / (minute)),
      document.querySelector('.js-timer-seconds').innerText = Math.floor((distance % (minute)) / second);
    }, second)
    alert("countDown "+'{{- end_date -}}'); {% endcomment %}

    //

 
        var second = 1000,
            minute = second * 60,
            hour = minute * 60, 
            day = hour * 24;
      
        // Get the values from the provided formats
        var month = '{{ section.settings.slec_month }}';
        var date = '{{ section.settings.slec_date }}';
        var year = '{{ section.settings.slec_year }}';
        var time = '{{ section.settings.slec_time }}';
        
        // Concatenate the date string in the expected format: "Month Day, Year Time"
        var endDateString = month + ' ' + date + ', ' + year + ' ' + time;
        var countDown = new Date(endDateString).getTime();
      
        var x = setInterval(function() {
          var now = new Date().getTime(),
              distance = countDown - now;
          
          // Update the timer elements
          document.querySelector('.js-timer-days').innerText = Math.floor(distance / (day));
          document.querySelector('.js-timer-hours').innerText = Math.floor((distance % (day)) / (hour));
          document.querySelector('.js-timer-minutes').innerText = Math.floor((distance % (hour)) / (minute));
          document.querySelector('.js-timer-seconds').innerText = Math.floor((distance % (minute)) / second);
        }, second);

      
  
</script>
{% endif %}
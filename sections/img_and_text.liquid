<div class="img_and_text">
  <div class="wrapper">
    <div class="imgText">
      <div class="imgs">
        <img src="{{ section.settings.it-img | img_url: 'master' }}" alt="">
      </div>
      <div class="text">
        <div>
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'AddText' %}
                <p
                  class="block-text"
                  style="font-size:{{ block.settings.font-size }}px; color:{{ block.settings.font-color }}; padding-top: {{ block.settings.text-padding-top }}px;  padding-bottom: {{ block.settings.text-padding-bottom }}px; "
                >
                  {{ block.settings['it-text'] }}
                </p>
              {% when 'AddPara' %}
                <p
                  class="block-text-para"
                  style="font-size:{{ block.settings.para-font-size }}px; color:{{ block.settings.para_font_color }}; padding-top: {{ block.settings.tpara-PD-top }}px;  padding-bottom: {{ block.settings.para-pad-btm }}px; "
                >
                  {{ block.settings['para-text'] }}
                </p>
              {% when 'Button' %}
                <div
                  class="btn"
                  style="background-color: {{ block.settings.btn-bg-color }}; border:2px solid {{ block.settings.border_color }};"
                >
                  {% assign link = section.settings.shopurl %}
                  {% if link == blank %}
                    {% assign link = shop.url %}
                  {% endif %}
                  <a
                    style="  font-size:{{ block.settings.btn-font-size }}px; color: {{ block.settings.btn-color }};   padding: {{ block.settings.btn-padding }}px;"
                    href="{{ link }}"
                  >
                    {{ block.settings['btn-text'] }}
                  </a>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.img_and_text.name",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "section-bg-color",
      "label": "t:sections.img_and_text.settings.section-bg-color.label",
      "default": "#fff"
    },
    {
      "type": "select",
      "id": "adj-img",
      "label": "Adjust text and image",
      "options": [
        {
          "value": "row",
          "label": "Image left"
        },
        {
          "value": "row-reverse",
          "label": "Text left"
        }
      ],
      "default": "row"
    },
    {
      "type": "select",
      "id": "M-adj-img",
      "label": "img and text adjustement Mobile",
      "options": [
        {
          "value": "column",
          "label": "Image Top"
        },
        {
          "value": "column-reverse",
          "label": "Text Top"
        }
      ],

      "default": "column"
    },
    {
      "type": "image_picker",
      "id": "it-img",
      "label": "Choose image"
    }
  ],
  "blocks": [
    {
      "name": "AddText",
      "type": "AddText",
      "settings": [
        {
          "type": "text",
          "id": "it-text",
          "label": "Enter a text"
        },
        {
          "type": "range",
          "id": "font-size",
          "min": 12,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Font size",
          "default": 26
        },
        {
          "type": "range",
          "id": "text-padding-top",
          "min": 1,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "padding top",
          "default": 4
        },
        {
          "type": "range",
          "id": "text-padding-bottom",
          "min": 1,
          "max": 40,
          "step": 1,
          "unit": "px",
          "label": "Padding bottom",
          "default": 2
        },
        {
          "type": "color",
          "id": "font-color",
          "label": "font color",
          "default": "#000000"
        }
      ]
    },
    {
      "name": "AddPara",
      "type": "AddPara",
      "settings": [
        {
          "type": "richtext",
          "id": "para-text",
          "label": "Enter a para"
        },
        {
          "type": "range",
          "id": "para-font-size",
          "min": 12,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Font size",
          "default": 26
        },
        {
          "type": "range",
          "id": "para-PD-top",
          "min": 1,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "padding top",
          "default": 4
        },
        {
          "type": "range",
          "id": "para-pad-btm",
          "min": 1,
          "max": 40,
          "step": 1,
          "unit": "px",
          "label": "Padding bottom",
          "default": 2
        },
        {
          "type": "range",
          "id": "para-Line-h",
          "min": 1,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Line Height",
          "default": 2
        },
        {
          "type": "color",
          "id": "para_font_color",
          "label": "font color",
          "default": "#000000"
        }
      ]
    },
    {
      "name": "Button",
      "type": "Button",
      "settings": [
        {
          "type": "text",
          "id": "btn-text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "shopurl",
          "label": "Enter link"
        },
        {
          "type": "range",
          "id": "btn-font-size",
          "min": 12,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": " Button Font size",
          "default": 24
        },
        // {
        //   "type": "range",
        //   "id": "Mbtn-font-size",
        //   "min": 1,
        //   "max": 100,
        //   "step": 1,
        //   "unit": "px",
        //   "label": "Button Font size Desktop",
        //   "default": 16
        // },
        {
          "type": "range",
          "id": "btn-padding",
          "min": 1,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Button padding",
          "default": 4
        },
        // {
        //   "type": "range",
        //   "id": "Mbtn-padding",
        //   "min": 1,
        //   "max": 40,
        //   "step": 1,
        //   "unit": "px",
        //   "label": "Button Padding Mobile",
        //   "default": 2
        // },
        {
          "type": "color",
          "id": "border_color",
          "label": "Border Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "btn-color",
          "label": "font color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "btn-bg-color",
          "label": "Background color"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "t:sections.Img_and_text.presets.name"
    }
  ]
}
{% endschema %}
